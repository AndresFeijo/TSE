<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="practicoPU" transaction-type="JTA">
           <!-- Proveedor JPA - Hibernate (incluido en WildFly) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
        <!-- El DataSource que configuramos en WildFly -->
        <jta-data-source>java:/DocumentosDS</jta-data-source>
        

        
        <!-- Listar explícitamente las entidades (buena práctica) -->
        <class>facultad.tse.practico.jpa.entities.Documento</class>
        
        <!-- Excluir clases no listadas -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="jakarta.persitence.schema-generation.database.action" value="Drop-and-create"/>

        </properties>
    </persistence-unit>
</persistence>