<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="practicoPU" transaction-type="JTA">
           <!-- Proveedor JPA - Hibernate (incluido en WildFly) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
        <!-- El DataSource que configuramos en WildFly -->
        <jta-data-source>java:jboss/datasources/PracticoDS</jta-data-source>
        

        
        <!-- Listar explícitamente las entidades (buena práctica) -->
        <class>facultad.tse.practico.entities.DocumentoEntity</class>
        
        <!-- Excluir clases no listadas -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        
        <properties>
            <!-- Configuración de Hibernate -->
            
            <!-- Dialecto de PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- Estrategia de generación del schema:
                 - create: Borra y crea las tablas cada vez (DESARROLLO)
                 - create-drop: Crea al inicio, borra al final
                 - update: Actualiza el schema sin borrar datos (RECOMENDADO PARA DESARROLLO)
                 - validate: Solo valida que el schema coincida
                 - none: No hace nada (PRODUCCIÓN)
            -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- Mostrar SQL en consola (útil para debug) -->
            <property name="hibernate.show_sql" value="true"/>
            
            <!-- Formatear SQL en consola -->
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Comentarios en SQL generado -->
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Estadísticas de Hibernate -->
            <property name="hibernate.generate_statistics" value="false"/>
            
            <!-- Manejo de transacciones JTA -->
            <property name="hibernate.transaction.jta.platform" 
                      value="org.hibernate.engine.transaction.jta.platform.internal.JBossAppServerJtaPlatform"/>
        </properties>
    </persistence-unit>
</persistence>