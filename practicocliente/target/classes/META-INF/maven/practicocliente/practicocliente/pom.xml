<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>practicocliente</groupId>
  <artifactId>practicocliente</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  
  <dependencies>
    <dependency>
      <groupId>facultad.tse</groupId>
      <artifactId>practico-ejb</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <type>ejb</type>
    </dependency>
    <dependency>
	  <groupId>com.formdev</groupId>
	  <artifactId>flatlaf</artifactId>
	  <version>3.4</version>
	</dependency>

    <!-- WildFly EJB client -->
	<dependency>
	    <groupId>org.wildfly</groupId>
	    <artifactId>wildfly-ejb-client-bom</artifactId>
	    <version>37.0.0.Final</version>
	    <type>pom</type>
	</dependency>
    <!-- Dependencias transversales que suelen necesitarse -->
    <dependency>
        <groupId>org.jboss.xnio</groupId>
        <artifactId>xnio-api</artifactId>
        <version>3.8.4.Final</version>
    </dependency>
    <dependency>
        <groupId>org.jboss.xnio</groupId>
        <artifactId>xnio-nio</artifactId>
        <version>3.8.4.Final</version>
    </dependency>
    <dependency>
        <groupId>org.jboss.logging</groupId>
        <artifactId>jboss-logging</artifactId>
        <version>3.5.0.Final</version>
    </dependency>
    
<dependency>
    <groupId>org.wildfly</groupId>
    <artifactId>wildfly-naming-client</artifactId>
    <version>2.0.1.Final</version>
</dependency>

<dependency>
    <groupId>jakarta.ws.rs</groupId>
    <artifactId>jakarta.ws.rs-api</artifactId>
    <version>3.1.0</version>
    <scope>provided</scope> <!-- o compile si lo prob치s standalone -->
</dependency>

<dependency>
    <groupId>org.glassfish.jersey.core</groupId>
    <artifactId>jersey-client</artifactId>
    <version>3.1.2</version>
</dependency>
<dependency>
    <groupId>org.glassfish.jersey.inject</groupId>
    <artifactId>jersey-hk2</artifactId>
    <version>3.1.2</version>
</dependency>


<!-- 游댳 API de JAX-WS (para RequestWrapper, ResponseWrapper, etc.) -->
<dependency>
  <groupId>javax.xml.ws</groupId>
  <artifactId>jaxws-api</artifactId>
  <version>2.3.1</version>
</dependency>

<!-- 游댳 Implementaci칩n de JAX-WS (runtime CXF o Metro, elegimos Metro que es la est치ndar de referencia) -->
<dependency>
  <groupId>com.sun.xml.ws</groupId>
  <artifactId>rt</artifactId>
  <version>2.3.3</version>
</dependency>

<!-- 游댳 API de JAXB (para javax.xml.bind.*) -->
<dependency>
  <groupId>javax.xml.bind</groupId>
  <artifactId>jaxb-api</artifactId>
  <version>2.3.1</version>
</dependency>

<!-- 游댳 Implementaci칩n de JAXB -->
<dependency>
  <groupId>org.glassfish.jaxb</groupId>
  <artifactId>jaxb-runtime</artifactId>
  <version>2.3.1</version>
</dependency>



    
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>
      <plugin>
	      <groupId>org.codehaus.mojo</groupId>
	      <artifactId>jaxws-maven-plugin</artifactId>
	      <version>2.6</version>
	      <configuration>
	      	<packagename>facultad.tse.practico.cliente.ws</packagename>
	      	<sourceDestDir>
	      		${project.basedir}/src/main/java
	      	</sourceDestDir>
	      	<wsdlUrls>
	      		<wsdlUrl>http://localhost:8080/practico-web/DocumentosSOAP?wsdl</wsdlUrl>
	      	</wsdlUrls>
	      </configuration>
	      <executions>
		      <execution>
		      	<goals>
		      		<goal>wsimport</goal>
		      	</goals>
		      </execution>
	      </executions>
      </plugin>
    </plugins>
  </build>
</project>